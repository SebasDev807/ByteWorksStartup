<form action="POST" class="shadow-lg p-8 space-y-6 max-w-lg bg-white rounded-lg">
    <legend class="text-xl font-bold text-gray-800 mb-4">Estoy interesado en</legend>

    <div class="flex flex-wrap gap-3">
        <button class="border border-sky-900 px-4 py-2 rounded-full hover:bg-sky-900 hover:text-white transition-all duration-200">
            UI/UX Design
        </button>

        <button class="border border-sky-900 px-4 py-2 rounded-full hover:bg-sky-900 hover:text-white transition-all duration-200">
            Desarrollo móvil
        </button>

        <button class="border border-sky-900 px-4 py-2 rounded-full hover:bg-sky-900 hover:text-white transition-all duration-200">
            Sistemas CRM
        </button>

        <button class="border border-sky-900 px-4 py-2 rounded-full hover:bg-sky-900 hover:text-white transition-all duration-200">
            Optimización
        </button>

        <button class="border border-sky-900 px-4 py-2 rounded-full hover:bg-sky-900 hover:text-white transition-all duration-200">
            Otros
        </button>
    </div>

    <div class="grid gap-2">
        <label for="name" class="font-semibold text-gray-700">Nombre</label>
        <input
            type="text"
            id="name"
            name="name"
            required
            placeholder="Jhon Smith"
            class="border-b border-gray-400 px-2 py-2 focus:border-blue-500 outline-none transition-all duration-200"
        />
    </div>
    
    <div class="grid gap-2">
        <label for="email" class="font-semibold text-gray-700">Email</label>
        <input
            type="email"
            id="email"
            name="email"
            required
            placeholder="example@gmail.com"
            class="border-b border-gray-400 px-2 py-2 focus:border-blue-500 outline-none transition-all duration-200"
        />
    </div>

    <div class="grid gap-2">
        <label for="message" class="font-semibold text-gray-700">Mensaje</label>
        <textarea
            id="message"
            name="message"
            required
            placeholder="Escribe tu mensaje aquí..."
            class="border-b border-gray-400 px-2 py-2 focus:border-blue-500 outline-none transition-all duration-200 resize-none h-24"
        ></textarea>
    </div>

    <input
        type="submit"
        value="Enviar Mensaje"
        class="w-full bg-sky-900 text-white py-2 rounded-lg font-semibold hover:bg-sky-800 transition-all duration-200 cursor-pointer"
    />
</form>
