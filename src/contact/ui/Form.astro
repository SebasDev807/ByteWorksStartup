<form action="POST" class="shadow-lg p-8 space-y-6 max-w-lg bg-white rounded-lg dark:bg-slate-800">
    <legend class="text-xl font-bold text-gray-800 mb-4 dark:text-white">Estoy interesado en</legend>

    <div class="flex flex-wrap gap-3">
        <button class="border border-sky-900 px-4 py-2 rounded-full text-sky-900 hover:bg-sky-900 hover:text-white transition-all duration-200 dark:border-sky-600 dark:text-sky-600 dark:hover:bg-sky-600 dark:hover:text-white">
            UI/UX Design
        </button>

        <button class="border border-sky-900 px-4 py-2 rounded-full text-sky-900 hover:bg-sky-900 hover:text-white transition-all duration-200 dark:border-sky-600 dark:text-sky-600 dark:hover:bg-sky-600 dark:hover:text-white">
            Desarrollo móvil
        </button>

        <button class="border border-sky-900 px-4 py-2 rounded-full text-sky-900 hover:bg-sky-900 hover:text-white transition-all duration-200 dark:border-sky-600 dark:text-sky-600 dark:hover:bg-sky-600 dark:hover:text-white">
            Sistemas CRM
        </button>

        <button class="border border-sky-900 px-4 py-2 rounded-full text-sky-900 hover:bg-sky-900 hover:text-white transition-all duration-200 dark:border-sky-600 dark:text-sky-600 dark:hover:bg-sky-600 dark:hover:text-white">
            Optimización
        </button>

        <button class="border border-sky-900 px-4 py-2 rounded-full text-sky-900 hover:bg-sky-900 hover:text-white transition-all duration-200 dark:border-sky-600 dark:text-sky-600 dark:hover:bg-sky-600 dark:hover:text-white">
            Otros
        </button>
    </div>

    <div class="grid gap-2">
        <label for="name" class="font-semibold text-gray-700 dark:text-gray-300">Nombre</label>
        <input
            type="text"
            id="name"
            name="name"
            required
            placeholder="Jhon Smith"
            class="border-b border-gray-400 px-2 py-2 focus:border-sky-500 outline-none transition-all duration-200 dark:border-b-sky-600 dark:focus:border-sky-400 dark:placeholder:text-slate-600"
        />
    </div>
    
    <div class="grid gap-2">
        <label for="email" class="font-semibold text-gray-700 dark:text-gray-300">Email</label>
        <input
            type="email"
            id="email"
            name="email"
            required
            placeholder="example@gmail.com"
            class="border-b border-gray-400 px-2 py-2 focus:border-sky-500 outline-none transition-all duration-200 dark:border-b-sky-600 dark:focus:border-sky-400 dark:placeholder:text-slate-600"
        />
    </div>

    <div class="grid gap-2">
        <label for="message" class="font-semibold text-gray-700 dark:text-gray-300">Mensaje</label>
        <textarea
            id="message"
            name="message"
            required
            placeholder="Escribe tu mensaje aquí..."
            class="border-b border-gray-400 px-2 py-2 focus:border-sky-500 outline-none transition-all duration-200 resize-none h-24 dark:border-b-sky-600 dark:focus:border-sky-400 dark:placeholder:text-slate-600"
        ></textarea>
    </div>

    <input
        type="submit"
        value="Enviar Mensaje"
        class="w-full bg-sky-900 text-white py-2 rounded-lg font-semibold hover:bg-sky-800 transition-all duration-200 cursor-pointer dark:bg-sky-600 dark:hover:bg-sky-500 dark:text-white"
    />
</form>
