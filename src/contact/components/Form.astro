<form class="form">
    <legend>I'm interesting in:</legend>

    <div class="subject-buttons">
        <button class="button-subject">UX/UI Design</button>
        <button class="button-subject">Mobile Development</button>
        <button class="button-subject">Bussiness System</button>
        <button class="button-subject">Optimization</button>
        <button class="button-subject">Other</button>
    </div>

    <div class="input-item">
        <label for="name">Your Name:</label>
        <input
            type="text"
            id="name"
            placeholder="Jhon Smith"
            class="input-underline"
        />
    </div>

    <div class="input-item">
        <div class="input-item">
            <label for="email">Your email</label>
            <input
                class="input-underline"
                type="email"
                id="email"
                placeholder="example@gmail.com"
            />
        </div>

        <div class="input-item">
            <label for="message">Your message:</label>
            <textarea id="message"> </textarea>
        </div>

        <input type="submit" value="Send message" class="button button-form" />
    </div>
</form>
