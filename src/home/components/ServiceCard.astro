---
import { Icon } from "astro-icon/components";

interface Props {
    icon: string;
    title: string;
    text: string;
}

const { icon, title, text } = Astro.props;
---

<article class="flex flex-col items-center text-center bg-gray-100 rounded-2xl p-10 shadow-lg">
    <div class="w-24 h-24 rounded-full bg-sky-800 flex items-center justify-center">
        <Icon name={icon} width={60} height={60} class="text-white" />
    </div>
    <h3 class="mt-4 text-xl text-sky-900 font-semibold">{title}</h3>
    <p class="text-gray-400">{text}</p>
</article>
